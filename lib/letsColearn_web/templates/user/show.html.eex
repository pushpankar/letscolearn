<h2>Show User</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @user.name %>
  </li>

  <li>
    <strong>Username:</strong>
    <%= @user.username %>
  </li>

  <li>
    <strong>Email:</strong>
    <%= @user.credential.email %>
  </li>

</ul>

<%= if Auth.match_user(@conn, @user.id) do %>
  <span><%= link "Edit", to: user_path(@conn, :edit, @user) %></span>
<% end %>